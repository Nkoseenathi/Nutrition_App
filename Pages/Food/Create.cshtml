@page
@model Nutrition_App.Pages.Food.Create
@{
    ViewData["Title"] = "Create";
}

<div class="row">

        <div class="col-md-8 mx-auto rounded border p-4">
            <h2 class="text-center mb-5"> Add new food </h2>
               
            
            <form method="post">
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Food*</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Food" />
                        <span asp-validation-for="Food" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Serving*</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Serving" />
                        <span asp-validation-for="Serving" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Type*</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Food_Type" />
                        <span asp-validation-for="Food_Type" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Fat*</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Total_Fat" />
                        <span asp-validation-for="Total_Fat" class="text-danger"></span>
                    </div>
                </div>


                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Carbohydrates*</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Total_Carbo_hydrate" />
                        <span asp-validation-for="Total_Carbo_hydrate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Sugar*</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Sugars" />
                        <span asp-validation-for="Sugars" class="text-danger"></span>
                    </div>
                </div>

                                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Protein*</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Protein" />
                        <span asp-validation-for="Protein" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Vitamin A*</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Vitamin_A" />
                        <span asp-validation-for="Vitamin_A" class="text-danger"></span>
                    </div>
                </div>


                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Vitamin C*</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Vitamin_C" />
                        <span asp-validation-for="Vitamin_C" class="text-danger"></span>
                    </div>
                </div>


                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Iron*</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Iron" />
                        <span asp-validation-for="Iron" class="text-danger"></span>
                    </div>
                </div>


                <div class="row">
                    <div class="offset-sm-4 col-sm-4 d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="col-sm-4 d-grid">
                        <a class="btn btn-outline-primary" href="/Food/Index" role="button">Cancel</a>
                    </div>
                </div>

            </form>
      
        </div>
</div>