@page
@model Nutrition_App.Pages.Food.Index
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center mb-3">Food list</h2><! --Page heading which will be displayed in the center-->

<a class="btn btn-primary mb-3" href="/Food/Create">Add new food</a><! --Button for opening the create page-->

<! --Table for displaying the database item-->
<table class="table">
<thead>
<tr>
    <! --Table columns
    <th>Food</th>
    <th>Type</th>
    <th>Serving</th>
    <th>Colories</th>
    <th>Fat</th>
    <th>Carbs</th>
    <th>Sugar</th>
    <th>Protein</th>
    <th>Vitamin A</th>
    <th>Vitamin C</th>
    <th>Iron</th>
    <th>Action</th>  
</tr>
</thead>
<! --Data that will be displayed in the table-->
<tbody>
@foreach(var food in Model.foodList){
    <tr>
<td>@food.Food</td>
<td>@food.Food_Type</td>
<td>@food.Serving</td>
<td>@food.Calories</td>
<td>@food.Total_Fat</td>
<td>@food.Total_Carbo_hydrate</td>
<td>@food.Sugars</td>
<td>@food.Protein</td> 
<td>@food.Vitamin_A</td>
<td>@food.Vitamin_C</td>
<td>@food.Iron</td>
<td style="white-space:nowrap">
<a class="btn btn-primary btn-sm" href="/Food/edit?name=@food.Food">Edit</a><! -- edit button that will open the edit page it will also provide the page with the food name parameter-->
<a class="btn btn-danger btn-sm " href="/Food/delete?name=@food.Food">Delete</a> <! -- delete button that will open the delete page it will also provide the page with the food name parameter-->
<td>
    </tr>
}
</tbody>

</table>